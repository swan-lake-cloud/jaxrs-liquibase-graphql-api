type User {
    id: ID!
    firstName: String!
    lastName: String!
    email: String!
    username: String!
    passwordHash: String!
}

scalar DateTime

input UserInput {
    firstName: String!
    lastName: String!
    email: String!
    username: String!
    passwordHash: String!
}

type Mutation {
    createUser(input: UserInput!): User!
    login(identifier: String!, password: String!): String!
}

type Query {
    user(id: ID!): User
    users: [User!]!
}
